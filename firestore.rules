rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow anyone to read driver profiles, but only drivers can write their own
    match /driver_profiles/{userId} {
      allow read: if true;  // Anyone can read driver profiles
      allow write: if request.auth != null && request.auth.uid == userId;  // Only the driver can write their own profile
    }
    
    // Allow users to read and write their own user profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow users to read and write their own driver documents
    match /drivers/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow users to read and write their own user profiles
    match /user_profiles/{userId} {
      allow read: if request.auth != null;  // Any authenticated user can read user profiles
      allow write: if request.auth != null && request.auth.uid == userId;  // Only the user can write their own profile
    }
    
    // Reviews collection rules - temporarily more permissive for testing
    match /reviews/{reviewId} {
      allow read, write: if request.auth != null;  // Allow any authenticated user to read and write reviews
    }
    
    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
} 